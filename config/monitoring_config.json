{
  "prometheus": {
    "enabled": true,
    "endpoint": "/metrics",
    "port": 8080,
    "metrics_path": "/metrics"
  },
  "health_checks": {
    "enabled": true,
    "endpoint": "/health",
    "interval": 30,
    "timeout": 10,
    "checks": {
      "database": "SELECT 1",
      "redis": "PING",
      "disk_space": "df -h /",
      "memory": "free -m"
    }
  },
  "alerting": {
    "enabled": true,
    "channels": [
      "email",
      "slack"
    ],
    "thresholds": {
      "error_rate": 0.05,
      "response_time": 2000,
      "memory_usage": 0.9,
      "disk_usage": 0.85
    }
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "rotation": true,
    "retention_days": 30
  }
}